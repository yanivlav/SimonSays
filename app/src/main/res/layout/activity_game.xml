<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/black"
        android:layout_above="@+id/bottomBtns"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/start_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_btn"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:id="@+id/coordinate"/>


    <RelativeLayout
            android:id="@+id/centerBtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottomBtns"
            android:layout_marginBottom="50dp"
            android:gravity="center">



        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/red_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/red_btn"
                android:gravity="center" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/green_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/red_btn"
                android:background="@drawable/green_btn" />


    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/bottomBtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="180dp"
            android:gravity="center">

        <ImageView
                android:id="@+id/blue_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/blue_btn_animation"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/yellow_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/blue_btn"
                android:background="@drawable/yellow_btn" />


    </RelativeLayout>


</RelativeLayout>


